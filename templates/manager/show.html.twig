{% extends 'base.html.twig' %}

{% block title %}Manager{% endblock %}

{% block body %}
    <h1>Manager</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ manager.id }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ manager.roles ? manager.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ manager.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ manager.email }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ manager.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ manager.firstname }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ manager.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ manager.createdAt ? manager.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ manager.updatedAt ? manager.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_manager_index') }}">back to list</a>

    <a href="{{ path('app_manager_edit', {'id': manager.id}) }}">edit</a>

    {{ include('manager/_delete_form.html.twig') }}
{% endblock %}
