{% extends 'base.html.twig' %}

{% block title %}Manager index{% endblock %}

{% block body %}
    <h1>Manager index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Email</th>
                <th>IsVerified</th>
                <th>Firstname</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for manager in managers %}
            <tr>
                <td>{{ manager.id }}</td>
                <td>{{ manager.roles ? manager.roles|json_encode : '' }}</td>
                <td>{{ manager.password }}</td>
                <td>{{ manager.email }}</td>
                <td>{{ manager.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ manager.firstname }}</td>
                <td>{{ manager.name }}</td>
                <td>{{ manager.createdAt ? manager.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ manager.updatedAt ? manager.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_manager_show', {'id': manager.id}) }}">show</a>
                    <a href="{{ path('app_manager_edit', {'id': manager.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_manager_new') }}">Create new</a>
{% endblock %}
