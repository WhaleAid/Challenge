<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    {{ dump(users) }}
    {{ dump(nbrPage) }}
    <h2>Liste des users</h2>
    <ul>
        {% for user in users %}
            <li>{{ user.id}} - {{ user.name }} - {{ user.firstname }} - {{ user.age }}ans - {{ user.role }}
                <a href="{{ path('user.detail', {id: user.id}) }}">Details</a>
                <a href="{{ path('user.remove', {id: user.id}) }}">Remove</a>
                <a href="{{ path('user.edit', {id: user.id}) }}">Edit</a>
            </li>
        {% endfor %}
    </ul>

    <ul>
        {% if page != 1 %}
            <li><a href="{{ path('user.list.alls', {page : page-1, nbre:nbre}) }}"> Previous</a>  </li>
        {% endif %}

        {% for i  in 1..nbrPage %}
            <li><a href="{{ path('user.list.alls', {page : i, nbre:nbre}) }}">{{ i }}</a>  </li>
        {% endfor %}


        {% if page != nbrPage %}
            <li><a href="{{ path('user.list.alls', {page : page+1, nbre:nbre}) }}"> Next</a>  </li>
        {% endif %}
    </ul>
</body>
</html>