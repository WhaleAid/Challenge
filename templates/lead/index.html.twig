{% extends 'base.html.twig' %}

{% block title %}Lead index{% endblock %}

{% block body %}
    <h1>Lead index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Email</th>
                <th>IsVerified</th>
                <th>Firstname</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lead in leads %}
            <tr>
                <td>{{ lead.id }}</td>
                <td>{{ lead.roles ? lead.roles|json_encode : '' }}</td>
                <td>{{ lead.password }}</td>
                <td>{{ lead.email }}</td>
                <td>{{ lead.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ lead.firstname }}</td>
                <td>{{ lead.name }}</td>
                <td>{{ lead.createdAt ? lead.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ lead.updatedAt ? lead.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_lead_show', {'id': lead.id}) }}">show</a>
                    <a href="{{ path('app_lead_edit', {'id': lead.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lead_new') }}">Create new</a>
{% endblock %}
