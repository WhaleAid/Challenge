{% extends 'base.html.twig' %}

{% block title %}Lead{% endblock %}

{% block body %}
    <h1>Lead</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lead.id }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ lead.roles ? lead.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ lead.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ lead.email }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ lead.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ lead.firstname }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lead.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ lead.createdAt ? lead.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ lead.updatedAt ? lead.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lead_index') }}">back to list</a>

    <a href="{{ path('app_lead_edit', {'id': lead.id}) }}">edit</a>

    {{ include('lead/_delete_form.html.twig') }}
{% endblock %}
